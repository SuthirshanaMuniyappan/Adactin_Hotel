package StepDefinition_SauceDemo;

import org.openqa.selenium.By;

import driver.driverInstance;
import io.cucumber.java.en.Then;

public class LogoutSauceDemo extends driverInstance {
	@Then("User clicks the Open Menu")
	public void user_clicks_the_open_menu() throws InterruptedException {
		Thread.sleep(2000);
		driver.findElement(By.xpath("//button[text()='Open Menu']")).click();
		Thread.sleep(2000);
	}

	@Then("User clicks the logout")
	public void user_clicks_the_logout() {
		driver.findElement(By.xpath("//a[text()='Logout']")).click();
	}

}
